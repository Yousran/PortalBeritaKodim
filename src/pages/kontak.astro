---
import PageLayout from '../components/PageLayout.jsx';
---

<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kontak Kodim 1408 Makassar - TNI AD Profesional di Kota Metropolitan Timur</title>
  <link rel="stylesheet" href="/src/styles/global.css">
  <script is:inline>
    if (localStorage.getItem('theme') === 'dark' || (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.documentElement.classList.add('dark');
    }
  </script>
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white transition-colors">
  <PageLayout client:only="react">
  
  <main class="pt-20 pb-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Hero Image -->
      <div class="mb-12 rounded-2xl overflow-hidden shadow-2xl">
        <img 
          src="/IMG-20240928-WA0087-scaled.jpg" 
          alt="Kodim 1408 Makassar"
          class="w-full h-auto object-cover"
        />
      </div>

      <!-- Header Section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-black text-gray-900 dark:text-white mb-3 leading-tight">
          Kontak Kodim 1408 Makassar
        </h1>
        <p class="text-xl text-[#306B34] dark:text-[#35CE8D] font-semibold">
          TNI AD Profesional di Kota Metropolitan Timur
        </p>
      </div>

      <!-- Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <!-- Contact Information -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            Informasi Kontak
          </h2>
          
          <div class="space-y-6">
            
            <!-- Address -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#306B34]/10 dark:bg-[#35CE8D]/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-[#306B34] dark:text-[#35CE8D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-900 dark:text-white mb-1">Alamat Markas</h3>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                  Jl. Perintis Kemerdekaan No.45, Kota Makassar, Sulawesi Selatan, Indonesia
                </p>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#306B34]/10 dark:bg-[#35CE8D]/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-[#306B34] dark:text-[#35CE8D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-900 dark:text-white mb-1">Nomor Telepon</h3>
                <p class="text-gray-600 dark:text-gray-400">
                  <a href="tel:+62411123456" class="hover:text-[#306B34] dark:hover:text-[#35CE8D] transition-colors">
                    (0411) 123-4567
                  </a>
                </p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#306B34]/10 dark:bg-[#35CE8D]/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-[#306B34] dark:text-[#35CE8D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-900 dark:text-white mb-1">Email Resmi</h3>
                <p class="text-gray-600 dark:text-gray-400">
                  <a href="mailto:info@kodim1408makassar.id" class="hover:text-[#306B34] dark:hover:text-[#35CE8D] transition-colors">
                    info@kodim1408makassar.id
                  </a>
                </p>
              </div>
            </div>

            <!-- Operating Hours -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#306B34]/10 dark:bg-[#35CE8D]/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-[#306B34] dark:text-[#35CE8D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-900 dark:text-white mb-1">Jam Operasional</h3>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                  Senin – Jumat: 08.00 – 16.00 WITA<br>
                  Sabtu: 08.00 – 12.00 WITA
                </p>
              </div>
            </div>

          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            Formulir Pesan
          </h2>
          
          <form id="contactForm" class="space-y-5">
            
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                Nama Lengkap
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-[#306B34] dark:focus:ring-[#35CE8D] focus:border-transparent outline-none transition-all text-gray-900 dark:text-white"
                placeholder="Masukkan nama lengkap Anda"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                Alamat Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-[#306B34] dark:focus:ring-[#35CE8D] focus:border-transparent outline-none transition-all text-gray-900 dark:text-white"
                placeholder="contoh@email.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                Nomor Telepon
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-[#306B34] dark:focus:ring-[#35CE8D] focus:border-transparent outline-none transition-all text-gray-900 dark:text-white"
                placeholder="08xx xxxx xxxx"
              />
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                Pesan Anda
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-[#306B34] dark:focus:ring-[#35CE8D] focus:border-transparent outline-none transition-all text-gray-900 dark:text-white resize-none"
                placeholder="Tulis pesan Anda di sini..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-gradient-to-r from-[#306B34] to-[#35CE8D] text-white font-bold py-4 px-6 rounded-lg hover:shadow-lg transform hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-[#306B34]/50 dark:focus:ring-[#35CE8D]/50"
            >
              Kirim Pesan
            </button>

          </form>

          <!-- Success Message (hidden by default) -->
          <div id="successMessage" class="hidden mt-4 bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-400 px-4 py-3 rounded-lg" role="alert">
            <p class="font-semibold">Pesan berhasil dikirim!</p>
            <p class="text-sm">Terima kasih telah menghubungi kami. Kami akan segera merespons pesan Anda.</p>
          </div>

        </div>

      </div>

    </div>
  </main>
  </PageLayout>

  <script>
    // Form submission handler
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('contactForm') as HTMLFormElement | null;
      form?.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Get form data
        const formData = {
          name: (document.getElementById('name') as HTMLInputElement | null)?.value ?? '',
          email: (document.getElementById('email') as HTMLInputElement | null)?.value ?? '',
          phone: (document.getElementById('phone') as HTMLInputElement | null)?.value ?? '',
          message: (document.getElementById('message') as HTMLTextAreaElement | null)?.value ?? ''
        };

        // Here you can add your API call to send the form data
        console.log('Form data:', formData);

        // Show success message
        const successMessage = document.getElementById('successMessage');
        if (successMessage) {
          successMessage.classList.remove('hidden');
          
          // Reset form
          form.reset();
          
          // Hide success message after 5 seconds
          setTimeout(() => {
            successMessage.classList.add('hidden');
          }, 5000);
        }
      });
    });
  </script>
</body>
</html>
